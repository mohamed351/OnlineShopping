<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
  
    <link rel="icon" type="image/png" sizes="16x16" href="~/dashboard/assets/images/favicon.png">
    <title>Dashboard</title>
    
    <link href="~/dashboard/assets/libs/flot/css/float-chart.css" rel="stylesheet">
    <link href="~/dashboard/dist/css/style.min.css" rel="stylesheet">
  @RenderSection("styles",false)
</head>
<body>

 
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
 
    <div id="main-wrapper">
   
        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header" data-logobg="skin5">
                  
                    <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
                  
                    <a class="navbar-brand" href="index.html">
                    
                        <b class="logo-icon p-l-10">
                          
                            <img src="~/dashboard/assets/images/logo-icon.png" alt="homepage" class="light-logo" />

                        </b>
                     
                        <span class="logo-text">
                      
                            <img src="~/dashboard/assets/images/logo-text.png" alt="homepage" class="light-logo" />

                        </span>
                      
                    </a>
               
                    <a class="topbartoggler d-block d-md-none waves-effect waves-light" href="javascript:void(0)" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="ti-more"></i></a>
                </div>
             
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                 
                    <ul class="navbar-nav float-left mr-auto">
                        <li class="nav-item d-none d-md-block"><a class="nav-link sidebartoggler waves-effect waves-light" href="javascript:void(0)" data-sidebartype="mini-sidebar"><i class="mdi mdi-menu font-24"></i></a></li>

                    </ul>


                </div>
            </nav>
        </header>


        <aside class="left-sidebar" data-sidebarbg="skin5">

            <div class="scroll-sidebar">

                <nav class="sidebar-nav">
                    <ul id="sidebarnav" class="p-t-30">
                        <li class="sidebar-item"> <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="sidebar-link waves-effect waves-dark sidebar-link" aria-expanded="false"><i class="mdi mdi-view-dashboard"></i><span class="hide-menu">Dashboard</span></a></li>

                        <li class="sidebar-item">
                            <a class="sidebar-link has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false"><i class="fas fa-info-circle"></i><span class="hide-menu">Product Info </span></a>

                            <ul aria-expanded="false" class="collapse  first-level">
                                <li class="sidebar-item"> <a asp-action="Index" asp-controller="Categories" asp-area="Admin" class="sidebar-link waves-effect waves-dark sidebar-link" aria-expanded="false"><i class=" fas fa-filter"></i><span class="hide-menu">Categories</span></a></li>

                                <li class="sidebar-item"> <a asp-action="Index" asp-controller="QuantityType" asp-area="Admin" class="sidebar-link waves-effect waves-dark sidebar-link" aria-expanded="false"><i class="fas fa-warehouse"></i><span class="hide-menu">QuantityType</span></a></li>

                                <li class="sidebar-item"> <a asp-action="Index" asp-controller="Companies" asp-area="Admin" class="sidebar-link waves-effect waves-dark sidebar-link" aria-expanded="false"><i class=" fas fa-building"></i><span class="hide-menu">Companies</span></a></li>
                            </ul>
                        </li>

                        <li class="sidebar-item"> <a asp-action="Index" asp-controller="Products" asp-area="Admin" class="sidebar-link waves-effect waves-dark sidebar-link" aria-expanded="false"><i class=" fas fa-cart-plus"></i><span class="hide-menu">Products</span></a></li>

                    </ul>
                </nav>
          
            </div>
   
        </aside>
    
        <div class="page-wrapper">
          
            <div class="container-fluid">
                @RenderBody()
            </div>
          
        </div>
   
    </div>

    @RenderBody()


    <script src="~/dashboard/assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/dashboard/assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/dashboard/assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/dashboard/assets/libs/perfect-scrollbar/dist/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/dashboard/assets/extra-libs/sparkline/sparkline.js"></script>
    <!--Wave Effects -->
    <script src="~/dashboard/dist/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/dashboard/dist/js/sidebarmenu.js"></script>
    <!--Custom JavaScript -->
    <script src="~/dashboard/dist/js/custom.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>